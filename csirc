; vim: filetype=scheme
(use parley)
(use parley-auto-completion)
(use scsh-process)

(let ((old (current-input-port)))
  (current-input-port (make-parley-port old)))

(completion-choices
  (lambda (input pos last)
    (map ->string (apropos-list last #:macros? #t
                                     #:case-insensitive? #t
                                     #:qualified? #t))))

(print-completions
  (lambda (completions)
    (print "")
    (print completions)))

(word-class '($ (+ (~ space "(" ))))

(add-key-binding! #\x9 auto-completion-handler)
